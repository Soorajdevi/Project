        $(".plus-btn").on("click", function () {
          var itemId = $(this).find("i").data("item-id");
          var quantityInput = $("#quantity-input-" + itemId);
          var currentQuantity = parseInt(quantityInput.val());
          var newQuantity = currentQuantity + 1;
          quantityInput.val(newQuantity);
          updateCartQuantity(itemId, newQuantity);

          // Calculate and update the price
          var price = parseFloat($("#total-price-" + itemId).text());
          var itemPrice = price / currentQuantity; // Divide by current quantity
          var newPrice = itemPrice * newQuantity; // Multiply by new quantity
          $("#total-price-" + itemId).text(newPrice.toFixed(2));

          // updateTotal();
        });

        $(".minus-btn").on("click", function () {
          var itemId = $(this).find("i").data("item-id");
          var quantityInput = $("#quantity-input-" + itemId);
          var currentQuantity = parseInt(quantityInput.val());
          if (currentQuantity > 1) {
            var newQuantity = currentQuantity - 1;
            quantityInput.val(newQuantity);
            updateCartQuantity(itemId, newQuantity);

            // Calculate and update the price
            var price = parseFloat($("#total-price-" + itemId).text());
            var itemPrice = price / currentQuantity; // Divide by current quantity
            var newPrice = itemPrice * newQuantity; // Multiply by new quantity
            $("#total-price-" + itemId).text(newPrice.toFixed(2));

            // updateTotal();
          }
        });
        function updateCartQuantity(itemId, quantity) {
          console.log("id from the sky" + itemId);

          $.ajax({
            url: "/addCart",
            type: "POST",
            dataType: "json",
            contentType: "application/json",
            data: JSON.stringify({ itemId, quantity }),
            success: function (data) {
              // Handle success response
              const subtotalElement = document.getElementById("subtotal");
              subtotalElement.innerText = data.cart.subtotal; // Update the subtotal value in the DOM

              const deliveryElement = document.getElementById("delivery");
              deliveryElement.innerText = data.cart.subtotal * 0.1; // Update the delivery value in the DOM

              const discountElement = document.getElementById("discount");
              discountElement.innerText = 5; // Update the discount value in the DOM

              const totalElement = document.getElementById("total");
              totalElement.innerText =
                data.cart.subtotal - data.cart.subtotal * 0.1 + 5; // Update the total value in the DOM

              $.ajax({
                url: "/cart",
                type: "GET",
                dataType: "json",
                success: function (data) {
                  console.log(data.cart.subtotal);
                },
                error: function (error) {
                  // Handle error response
                  console.log(error);
                },
              });
            },
            error: function (error) {
              // Handle error response
              console.log(error);
            }
          });
        }
      });

      let productIdToRemove;

      function showDialog(productId) {
        productIdToRemove = productId;
        $("#confirm-dialog").show();
      }

      function hideDialog() {
        $("#confirm-dialog").hide();
      }

      function removeProduct() {
        $.ajax({
          url: `/cart/${productIdToRemove}`,
          method: "DELETE",
          success: (response) => {
            if (response.message === "Product removed from cart") {
              $("#confirm-dialog").hide();
              $(`.remove-button[data-product-id="${productIdToRemove}"`)
                .closest("tr")
                .remove();
console.log(response)
             
            }
          },
          error: (error) => {
            console.error(error.responseText);
          },
        })
      }
