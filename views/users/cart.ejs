    <section class="ftco-section ftco-cart">
      <div class="container">
        <div class="row d-flex">
          <div class="col-md-8 ftco-animate">
            <div class="cart-list">
              <table class="table" id="cart-table">
                <thead class="thead-primary">
                  <tr class="text-center">
                    <th>Remove</th>
                    <th>image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% cart.forEach(function(cartItem){ %> <%
                  cartItem.items.forEach(function(item,index){ %>
                  <tr class="text-center">
                    <td class="product-remove">
                      <i
                        class="fa-solid fa-trash remove-button"
                        data-product-id="<%= item.product._id %>"
                        onclick="showDialog('<%= item.product._id %>')"
                      ></i>
                    </td>

                    <td class="image-prod">
                      <% if (item.product.image &&
                      Array.isArray(item.product.image)) { %> <% const imagePath
                      = item.product.image[0].replace('public', ''); %>
                      <img
                        class="image"
                        style="width: 80px; height: 16vh; border-radius: 0px"
                        src="<%= imagePath %>"
                        alt="no"
                      />
                      <% } %>
                    </td>
                    <td class="product-name">
                      <h3><%=item.product.name %></h3>
                      <!-- <p><%=item.product.description %></p> -->
                    </td>

                    <div
                      id="confirm-dialog"
                      style="
                        display: none;
                        position: absolute;
                        top: 50%;
                        left: 50%;
                        transform: translate(-50%, -50%);
                        background-color: #ffffff;
                        width: 500px;
                        height: 150px;
                        border: none;
                        text-align: center;
                      "
                      class="shadow"
                    >
                      <p style="color: black; font-weight: bold" class="mt-2">
                        Are you sure you want to remove this product?
                      </p>
                      <button
                        onclick="removeProduct()"
                        class="btn btn-primary w-25"
                      >
                        Yes
                      </button>
                      <button
                        onclick="hideDialog()"
                        class="btn btn-secondary w-25"
                      >
                        No
                      </button>
                    </div>

                    <td class="price"><%=item.product.price %></td>
                    <td
                      class="quantity w-100 mt-4 d-flex justify-content-center"
                    >
                      <button
                        class="plus-btn w-25 item-total-price"
                        name="itemId"
                        value="increase"
                      >
                        <i
                          class="fa-solid fa-plus"
                          data-item-id="<%= item.product._id %>"
                        ></i>
                      </button>
                      <div class="quantity input-group mx-4 w-50">
                        <input
                          type="text"
                          name="quantity"
                          class="quantity form-control input-number"
                          value="<%= item.quantity %>"
                          min="1"
                          max="<%= item.product.Stock %>"
                          data-item-id="<%= item.product._id %>"
                          id="quantity-input-<%= item.product._id %>"
                        />
                      </div>
                      <button
                        class="minus-btn w-25 item-total-price"
                        name="itemId"
                        value="decrease"
                      >
                        <i
                          class="fa-solid fa-minus"
                          data-item-id="<%= item.product._id %>"
                        ></i>
                      </button>
                    </td>
                    <!-- ...other table cells... -->
                    <input
                      type="hidden"
                      id="productId"
                      value="<%= item.product._id %>"
                    />
                    <td class="total" id="total-price-<%= item.product._id %>">
                      <%= item.price %>
                    </td>
                  </tr>
                  <% }); %> <% }); %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="col-md-4">
            <form action="/cart" method="post">
              <% cart.forEach(function(cartItem){ %>
              <div class="cart-total mb-3" >>
                <h3>Cart Totals</h3>
                <p class="d-flex">
                  <span>Subtotal</span>
                  <span id="subtotal"><%= cartItem.subtotal %></span>
                </p>

                <p class="d-flex">
                  <span>Delivery</span>
                  <span id="delivery"><%= cartItem.subtotal * 0.1 %></span>
                </p>

                <p class="d-flex">
                  <span>Discount</span>
                  <span id="discount"><%= 5 %></span>
                </p>

                <hr />

                <p class="d-flex total-price">
                  <span>Total</span>
                  <span id="total"
                    ><%= cartItem.subtotal - cartItem.subtotal * 0.1 + 5
                    %></span
                  >
                </p>
              </div>
              <% }); %>

